describe Calculator do
  context 'addition' do
    it 'should add correctly' do
      @calc.push 3
      @calc.push 4
      @calc.add.should == 7
    end
  end
end

class CalculatorTest < Test::Unit::TestCase
  def test_addition
    calculator = Calculator.new
    calculator.push 3
    calculator.push 4
    assert_equal(calculator.add, 7)
  end
end