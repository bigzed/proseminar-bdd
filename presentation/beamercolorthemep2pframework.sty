% Defining three new colors. UPB Blue is the official color of the UPB logo.
% UPB Red and UPB Green have a comparable saturation.
\definecolor{upbblue}{rgb}{0.00, 0.22, 0.46}
\definecolor{upbred}{rgb}{0.46, 0.00, 0.00}
\definecolor{upbgreen}{rgb}{0.00, 0.46, 0.00}

\definecolor{p2pgreen}{rgb}{0,0.4,0}

% Standard color definitions:
\mode<presentation>
\setbeamercolor*{normal text}{fg=black,bg=white}
\setbeamercolor*{alerted text}{fg=upbred}
\setbeamercolor*{example text}{fg=upbgreen}
\setbeamercolor*{structure}{fg=black}

% A new color definition for the navigation bars.
\setbeamercolor*{navigation}{fg=white}

% Block title colors:
\setbeamercolor*{block title}{fg=black,bg=upbblue!25}
\setbeamercolor*{block title alerted}{fg=upbred,bg=upbred!25}
\setbeamercolor*{block title example}{fg=upbgreen,bg=upbgreen!25}

% Block colors:
\setbeamercolor*{block body}{fg=black,bg=upbblue!15}
\setbeamercolor*{block body alerted}{fg=black,bg=upbred!15}
\setbeamercolor*{block body example}{fg=black,bg=upbgreen!15}

% Footline
\setbeamercolor{footline text}{fg=lightgray}
\setbeamercolor{footline framenumber}{fg=black}

% Title page
\setbeamercolor{title page title}{fg=white,bg=p2pgreen}

% No seperation lines:
\setbeamercolor*{separation line}{}
\setbeamercolor*{fine separation line}{}
\mode
<all>