% New Unit for the outer theme. 1 upb@unit equals the height of the navigation
% bars at the top and the bottom of the pages.
\newdimen\upb@unit
\upb@unit=.025\paperwidth
\mode<presentation>

% Including the background image (PDF only, LaTeX + EPS does not work as
% expected...)
\defbeamertemplate*{background canvas}{p2pframework theme}
{
  \pgfimage[width=\paperwidth,height=\paperheight]{graphics/frameworkbackground}%
}


% Frametitle definition. The hskip is needed because of the 3 upb@unitmargin.
% See beamer size for details.
\defbeamertemplate*{frametitle}{p2pframework theme}
{
  \vskip1.5\upb@unit%
  \usebeamercolor[fg]{structure}%
  \insertframetitle
  \vskip2mm
}


\renewcommand*\footnoterule{}
\defbeamertemplate*{footnote}{p2pframework theme}
{
  \parindent 1em\noindent%
  \raggedright
  \hbox to 1.8em{\hfil\insertfootnotemark}\insertfootnotetext\par%
  \vskip0.5\upb@unit%
}

% Footline definition. Again invisible boxes ae used for alignment.
\defbeamertemplate*{footline}{p2pframework theme}
{
  \leavevmode%
  \hskip18\upb@unit%
  \hbox{%  
   \begin{beamercolorbox}[wd=20\upb@unit,ht=0em,dp=0\upb@unit,right]{ignorebg}
      \usebeamercolor[fg]{footline text}
    Arbeitsgruppe - Corporate Semantic Web 
    \end{beamercolorbox}
    
   \begin{beamercolorbox}[wd=0.75\upb@unit,ht=0em,dp=0\upb@unit,right]{ignorebg}
      \usebeamercolor[fg]{footline framenumber}
      \insertframenumber{}
    \end{beamercolorbox}
  }
\vskip.3\upb@unit
}


